<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" styleClass="anchor-pane-popup"
            stylesheets="@../Resources/Style/default.css" xmlns="http://javafx.com/javafx/9"
            fx:controller="Client.Controller.PopupTabController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Actual date = ">
                                    <font>
                                        <Font name="Monospaced Regular" size="25.0"/>
                                    </font>
                                </Text>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER">
                            <children>
                                <Text fx:id="dateText" strokeType="OUTSIDE" strokeWidth="0.0">
                                    <font>
                                        <Font name="Monospaced Regular" size="25.0"/>
                                    </font>
                                </Text>
                            </children>
                        </VBox>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets left="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <TabPane fx:id="popupTabPane" rotateGraphic="true" snapToPixel="false"
                         stylesheets="@../Resources/Style/default.css" tabClosingPolicy="UNAVAILABLE"
                         tabMinWidth="200.0">
                    <tabs>
                        <Tab fx:id="setPresencesTab" closable="false" text="Home"/>
                        <Tab fx:id="setMenuTab" closable="false" text="Child"/>
                        <Tab fx:id="setTripTab" closable="false" text="Canteen"/>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
        <Button alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#remove" text="X" AnchorPane.rightAnchor="3.0"
                AnchorPane.topAnchor="3.0">
            <styleClass>
                <String fx:value="circle-button"/>
                <String fx:value="exit-button"/>
            </styleClass>
        </Button>
    </children>
</AnchorPane>
